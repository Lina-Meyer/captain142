<div class="container">
  <div class="row">
    <div class="card col-xs-12 col-md-5">
      <img class="card boat-img" src="<%= cl_image_path @boat.photo, height: 300, width: 400, crop: :fill %>" alt="">
      <h2 class=""><%= @boat.name %></h2>
    </div>
    <div class="card col-xs-12 col-md-7 boat-description">
      <ul>
        <li>
          <%= @boat.city %>
          <li>
          <%= @boat.price %>
          </li>
          <li>
          <%= @boat.category%>
          </li>
          <li>
          <%= @boat.description %>
          </li>
          <li>
          <%= @boat.capacity %>
          </li>
        </li>
      </ul>
    <%= simple_form_for [@boat, @booking] do |f| %>
      <input type="text" name="booking[start_date]" class="form-control datepicker">
      <input type="text" name="booking[end_date]" class="form-control datepicker">
      <%= f.submit %>
    <% end %>
    </div>
  </div>
  <div class="row">
    <h3 class=""><%=link_to "See all boats", boats_path%></h3>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= render "map" %>
    </div>
  </div>
</div>

<%= javascript_pack_tag "datepicker" %>
