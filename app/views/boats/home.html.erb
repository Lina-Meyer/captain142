
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.0  ) 50%), url('<%= image_path 'banner' %>');">
    <div class="banner-content">

      <%= render 'shared/flashes' %>

      <h1>theCAPTAIN</h1>
      <p>Rent a boat from local's</p>

      <%= form_tag boats_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "What's your next destination?"
        %>
      <% end %>
      <div class="search-bar">
         <form class="form-search" method="post">
          <input type="text" class="textbox" placeholder="What's your next destination?">
          <button type="submit" class="button">
            <i class="fas fa-search"></i>
          </button>
        </form>
      </div>
    </div>
</div>

<%= render 'shared/carrousel', boats: @boats %>
