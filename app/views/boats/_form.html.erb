<%= simple_form_for (@boat) do |f| %>
  <% if @boat.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @boat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.input :description, class: 'form-control' %>
    <%= f.input :category, class: 'form-control' %>
    <%= f.input :price, class: 'form-control' %>
    <%= f.input :capacity, class: 'form-control' %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <br>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
